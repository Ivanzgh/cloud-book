.index .slide-image{
  width : 750rpx;
  height: 350rpx;
}
 .content-item{
   margin-top: 40rpx;
}
 .content-item .title{
   margin-top: 30rpx;
   font-size: 16px;
   padding-left: 20rpx;
   border-left: 2px solid #000;
   height: 32rpx;
   line-height: 32rpx;
 }
  .content-item .content{
    margin-top: 40rpx;
    display: flex;
    justify-content: space-between;
  }
  .content .box-l .img{
    width: 230rpx;
    height: 300rpx;
  }
  .box-r{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 30rpx;
    padding-bottom: 20rpx;
  }
  .box-r .box-title{
    font-size: 16px;  
    color: #333;
  }
  .box-r .desc {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    line-height: 1.5;
    font-size: 14px;
    color: #444;
  }
  .box-r .author{
    display: flex;
    justify-content: space-between;
    font-size: 12px;
  }
